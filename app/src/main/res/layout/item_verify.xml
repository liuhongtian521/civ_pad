<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_137"
    android:layout_height="@dimen/dp_94"
    android:background="@drawable/bg_write_round_five"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_6"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_7">

    <TextView
        android:id="@+id/tv_item_verify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张某某"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/sp_9" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_9"
        android:layout_alignTop="@+id/tv_item_verify_name"
        android:layout_alignBottom="@+id/tv_item_verify_name"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_toRightOf="@+id/tv_item_verify_name"
        android:visibility="visible"
        android:src="@mipmap/icon_type_success" />
    <ImageView
        android:id="@+id/iv_item_faile"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_9"
        android:layout_alignTop="@+id/tv_item_verify_name"
        android:layout_alignBottom="@+id/tv_item_verify_name"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_toRightOf="@+id/tv_item_verify_name"
        android:visibility="gone"
        android:src="@mipmap/icon_type_faile" />
    
    <ImageView
        android:id="@+id/iv_item_head_one"
        android:layout_width="@dimen/dp_53"
        android:layout_height="@dimen/dp_65"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/iv_item_head_two"
        android:layout_width="@dimen/dp_53"
        android:layout_height="@dimen/dp_65"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>