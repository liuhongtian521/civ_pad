<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFF2F7"
        android:orientation="vertical">
        <include layout="@layout/common_title_layout" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/bg_write_round_five">

            <!-- 考生查询信息 -->
            <LinearLayout
                android:id="@+id/ll_student_info"
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

                <LinearLayout
                    android:id="@+id/line_people"
                    android:layout_width="275dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bg_btn_line_blur"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="54dp"
                        android:paddingRight="@dimen/dp_10">

                        <ImageView
                            android:id="@+id/iv_face"
                            android:layout_width="85dp"
                            android:layout_height="105dp"
                            android:src="@drawable/icon_face_show" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:paddingStart="16dp">
                            <TextView
                                android:id="@+id/tv_people_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="张某某"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="准考证号："
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />

                                <TextView
                                    android:id="@+id/tv_cardno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="身份证号："
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />

                                <TextView
                                    android:id="@+id/tv_idCard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="@dimen/dp_120"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="考场："
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text=" "
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="@dimen/dp_120"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="座位号："
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />

                                <TextView
                                    android:id="@+id/tv_address_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text=" "
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="健康码："
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />

                                <TextView
                                    android:id="@+id/tv_health_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:textColor="#333333"
                                    android:textSize="@dimen/sp_9" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_next"
                            android:layout_width="180dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="@dimen/dp_10"
                            android:background="@drawable/btn_one"
                            android:gravity="center"
                            android:text="对比"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_9" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_blank"
                    android:layout_width="275dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bg_btn_line_blur">

                    <ImageView
                        android:id="@+id/iv_place_holder"
                        android:layout_width="135dp"
                        android:layout_height="131dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="53dp"
                        android:background="@mipmap/icon_search_placeholder" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_place_holder"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:text="@string/msg_none"
                        android:textColor="@color/_999999"
                        android:textSize="9sp" />

                </RelativeLayout>
            </LinearLayout>

            <!-- 查询区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/ll_student_info"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/rel_right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_right"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_3"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_blue_round_line"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/tv_right"
                                style="@style/searchUnSelected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="身份证号查询"
                                android:textColor="#163366"
                                android:textSize="10sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rel_left"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/iv_left"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_3"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:visibility="gone"
                                android:background="@drawable/bg_blue_round_line" />

                            <TextView
                                android:id="@+id/tv_left"
                                style="@style/searchSelected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="准考证查询"
                                android:textColor="#666666"
                                android:textSize="9sp" />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/bg_driver" />
                <RelativeLayout
                    android:id="@+id/rl_search"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_edit"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingStart="@dimen/dp_10">

                    <Button
                        android:id="@+id/btn_search"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_alignParentEnd="true"
                        android:background="@mipmap/icon_clear" />

                    <EditText
                        android:id="@+id/edit_exam_number"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_view"
                        android:background="@null"
                        android:clickable="false"
                        android:enabled="false"
                        android:hint="请输入证件号后6位"
                        android:imeOptions="actionSearch"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:singleLine="true"
                        android:textColorHint="#A7B6D1"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/iv_view"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_search" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rl_keyboard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <data>

    </data>
</layout>