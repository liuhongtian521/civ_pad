<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/line_face_success"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_210"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:visibility="visible"
            android:background="@drawable/bg_write_round_five">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_135"
                    android:layout_height="@dimen/dp_130"
                    android:src="@mipmap/icon_face_success"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证通过"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_7"
                    android:textColor="#0EBD35"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_health_code"
                    android:layout_width="@dimen/dp_135"
                    android:layout_height="@dimen/dp_130"
                    android:src="@mipmap/icon_code_green"/>
                <TextView
                    android:id="@+id/tv_health_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康码正常"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_7"
                    android:textColor="#0EBD35"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_face_faile"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_210"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:visibility="gone"
            android:gravity="center"
            android:background="@drawable/bg_write_round_five">
            <ImageView
                android:id="@+id/icon_face_faile_img"
                android:layout_width="@dimen/dp_135"
                android:layout_height="@dimen/dp_130"
                android:src="@mipmap/icon_face_faile"/>
            <TextView
                android:id="@+id/icon_face_faile_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证失败"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_7"
                android:textColor="#FF8453"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/cha"/>
    </FrameLayout>


</LinearLayout>