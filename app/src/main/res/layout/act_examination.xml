<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewmodel"
            type="com.askia.coremodel.viewmodel.ExaminationViewModel" />

        <variable
            name="onclick"
            type="com.lncucc.authentication.activitys.ExaminationActivity.ProxyClick" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#EFF2F7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:id="@+id/ll_examiniation_left"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/include"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_examination"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_examination_left"
                    android:gravity="center"
                    android:onClick="@{()->onclick.handleExaminationData()}"
                    android:text="场次查看"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_examination_check"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:onClick="@{()->onclick.handleExaminationNow()}"
                    android:text="验证数据查看"
                    android:textColor="@color/_333333"
                    android:textSize="9sp" />
            </LinearLayout>

            <!--left -->
            <include
                android:id="@+id/include"
                layout="@layout/common_title_layout" />

            <LinearLayout
                android:layout_below="@+id/include"
                android:layout_toEndOf="@id/ll_examiniation_left"
                android:layout_margin="10dp"
                android:background="@drawable/bg_login_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp">
                    <TextView
                        android:text="@string/examination_check"
                        android:textColor="#163366"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:lineSpacingExtra="13dp"
                        android:textSize="9sp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:background="@drawable/bg_driver"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>