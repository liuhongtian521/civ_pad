<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="226dp"
        android:background="@drawable/bg_write_round_five"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@drawable/cha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="考生信息"
                android:textColor="#163366"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/bg_driver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_stu_info"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:text="李某某"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_view_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_student_name"
                    android:layout_marginTop="10dp"
                    android:text="性别："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:id="@+id/tv_student_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_view_sex"
                    android:layout_toRightOf="@+id/tv_view_sex"
                    android:text="男"
                    android:textColor="#333333"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_view_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_view_sex"
                    android:layout_marginTop="10dp"
                    android:text="民族："
                    android:textColor="#333333"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_student_ethnic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_view_nation"
                    android:layout_toRightOf="@+id/tv_view_nation"
                    android:text="汉族"
                    android:textColor="#333333"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_census"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_view_nation"
                    android:layout_marginTop="10dp"
                    android:text="户籍： "
                    android:textColor="#333333"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_census_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_census"
                    android:layout_toRightOf="@+id/tv_census"
                    android:text="辽宁省沈阳市浑南新区世纪路1号"
                    android:textColor="#333333"
                    android:textSize="8sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_write_line"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场次名称："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:id="@+id/tv_exam_subjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语文"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="1dp"
                android:background="#FAFAFA"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_122"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="考场："
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tv_examination_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="001"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="准考证号："
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tv_ticket_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21211020192922"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_margin="@dimen/dp_1"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_122"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="座位号："
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tv_seat_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号："
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tv_idCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="212110201929222112"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_8" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
