<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_write_round_five"
        android:orientation="vertical">
        <com.qmuiteam.qmui.widget.QMUIProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="31dp"
            android:layout_centerHorizontal="true"
            app:qmui_stroke_width="8dp"
            android:textColor="#3A90FF"
            android:textSize="14sp"
            app:qmui_background_color="#E4EAF6"
            app:qmui_progress_color="#3A90FF"
            app:qmui_type="type_circle"/>

        <TextView
            android:id="@+id/tv_progress"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_loading_msg"
            android:text="数据导出中…"
            android:textSize="11sp"
            android:layout_marginTop="13dp"
            android:textColor="@color/_163366"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
