<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_write_round_five"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_network_setting_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="31dp">
            <TextView
                android:text="网络设置"
                android:textStyle="bold"
                android:textColor="#163366"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:id="@+id/network_setting__line"
            app:layout_constraintTop_toBottomOf="@+id/ll_network_setting_top"
            android:background="@drawable/bg_driver"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


        <LinearLayout
            android:id="@+id/ll_network_setting__mode"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/network_setting__line">



            <RelativeLayout
                android:id="@+id/rl_network_setting_usb"
                android:layout_width="match_parent"
                android:layout_height="39dp">
                <TextView
                    android:id="@+id/tv_setting"
                    android:text="考点客户端IP设置"
                    android:layout_alignParentStart="true"
                    android:textSize="9sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="19dp"
                        android:id="@+id/ip_input4"
                        android:background="@drawable/bg_ip_setting"
                        android:layout_centerVertical="true"
                        android:text="192"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:textColor="@color/_666666"
                        />
                    <ImageView
                        android:background="@mipmap/icon_dot"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="19dp"
                        android:id="@+id/ip_input3"
                        android:background="@drawable/bg_ip_setting"
                        android:layout_centerVertical="true"
                        android:text="192"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:textColor="@color/_666666"
                        />

                    <ImageView
                        android:background="@mipmap/icon_dot"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="bottom"
                        android:layout_width="2dp"
                        android:layout_height="2dp"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="19dp"
                        android:id="@+id/ip_input2"
                        android:background="@drawable/bg_ip_setting"
                        android:layout_centerVertical="true"
                        android:text="192"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:textColor="@color/_666666"
                        />
                    <ImageView
                        android:background="@mipmap/icon_dot"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="bottom"
                        android:layout_width="2dp"
                        android:layout_height="2dp"/>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="19dp"
                        android:id="@+id/ip_input1"
                        android:background="@drawable/bg_ip_setting"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:text="192"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:textColor="@color/_666666"
                        />
                    <TextView
                        android:id="@+id/tv_request_address"
                        android:layout_width="75dp"
                        android:layout_height="19dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_network_btn"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="IP设置"
                        android:textAlignment="center"
                        android:textColor="#FFF"
                        android:textSize="9sp" />
                </LinearLayout>


                <View
                    android:background="@drawable/bg_driver"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_network_setting_sdcard"
                android:layout_width="match_parent"
                android:layout_height="39dp">
                <TextView
                    android:text="本机网络设置"
                    android:layout_alignParentStart="true"
                    android:textSize="9sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="75dp"
                    android:layout_height="19dp"
                    android:id="@+id/net_set_btn"
                    android:background="@drawable/bg_network_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="网络设置"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:textColor="#FFF"
                    android:textSize="9sp"
                    android:clickable="true"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_driver" />
            </RelativeLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>